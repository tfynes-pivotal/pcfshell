userlist users
  user pcfuser insecure-password pcfpass


frontend www                                    
#   acl is_proxy_https hdr(X-Forwarded-Proto) https
   acl search_users http_auth(users)                                                                                                                 
   mode http                                                                                                                                                     
   bind 0.0.0.0:8080                                                                                                                                                   
   timeout client 10m 
   timeout connect 5s 
   timeout server 10m 


